<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MyController">
   <children>
      <Button layoutX="125.0" layoutY="230.0" mnemonicParsing="false" onAction="#sendData" prefHeight="40.0" prefWidth="150.0" text="SEND">
         <font>
            <Font name="Cambria Bold" size="20.0" />
         </font>
      </Button>
      <Button layoutX="125.0" layoutY="280.0" mnemonicParsing="false" onAction="#receiveData" prefHeight="40.0" prefWidth="150.0" text="RECEIVE">
         <font>
            <Font name="Cambria Bold" size="20.0" />
         </font>
      </Button>
      <Label fx:id="status" alignment="CENTER" layoutX="102.0" layoutY="430.0" prefHeight="70.0" prefWidth="200.0" text="Not Connected to any PC">
         <font>
            <Font name="Cambria" size="14.0" />
         </font>
      </Label>
      <Label fx:id="ipAdd" alignment="CENTER" layoutX="25.0" prefHeight="70.0" prefWidth="350.0" textAlignment="CENTER" textFill="#4529d0">
         <font>
            <Font name="Cambria Italic" size="14.0" />
       	 </font>
      </Label>
      <Label fx:id="data" alignment="CENTER" layoutX="66.0" layoutY="370.0" prefHeight="60.0" prefWidth="273.0" textFill="#a31a1a">
         <font>
            <Font name="Cambria" size="14.0" />
         </font>
      </Label>
      <Button layoutX="125.0" layoutY="102.0" mnemonicParsing="false" onAction="#browse" prefHeight="40.0" prefWidth="150.0" text="BROWSE">
         <font>
            <Font name="Cambria Bold" size="20.0" />
         </font>
      </Button>
      <TextField fx:id="messages" layoutX="126.0" layoutY="167.0" prefHeight="35.0" promptText="Type your messages" />
      <Label alignment="CENTER" layoutX="188.0" layoutY="142.0" prefHeight="25.0" prefWidth="25.0" text="Or" />
      <Button layoutX="125.0" layoutY="330.0" mnemonicParsing="false" onAction="#saveData" prefHeight="40.0" prefWidth="150.0" text="SAVE DATA">
         <font>
            <Font name="Cambria Bold" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
